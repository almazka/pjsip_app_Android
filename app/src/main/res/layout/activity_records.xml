<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.telefon.ufanet.RecordsActivity"
    android:background="@drawable/bkgrd">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/relative_records"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/zv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:text="Записи разговоров"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/zv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/zv"
                android:fontFamily="sans-serif"
                android:text="(время хранения аудиофайлов 60 дней)"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="italic"/>
            <LinearLayout
                android:id="@+id/lin1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/zv1"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Начиная c: "
                        android:textAllCaps="false"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/firstdate_records"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/et_bg_black"
                        android:fontFamily="sans-serif"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="15sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="По: "
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:textAlignment="center"
                        android:id="@+id/seconddate_records"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/et_bg_black"
                        android:fontFamily="sans-serif"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="#000000"
                        android:textSize="15sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Cтатус вызова: "
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <Spinner
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.2"
                        android:textAlignment="center"
                        android:id="@+id/status_call"
                        android:entries="@array/status_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dialog"
                        android:visibility="visible"
                        android:background="@drawable/btn_bg_black">

                    </Spinner> />


                </LinearLayout>


            </LinearLayout>


            <Button
                android:id="@+id/submit_records"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@id/lin1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_bg_black"
                android:fontFamily="sans-serif"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:text="Показать"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="16sp" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/no_action"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:text="(На Ваших номерах не подключена услуга!)"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="italic" />
        </LinearLayout>

        <ProgressBar
            android:paddingTop="10dp"
            android:visibility="gone"
            android:id="@+id/progress"
            android:minHeight="20dip"
            android:maxHeight="20dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@android:style/Widget.ProgressBar.Inverse"/>

        <LinearLayout

            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/content_records"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>




    </LinearLayout>


</LinearLayout>
